// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials login (nullable for OAuth users)

  accounts      Account[]
  sessions      Session[]
  meetings      Meeting[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Meeting {
  id                String   @id @default(uuid())
  title             String?
  status            String   @default("active") // active, processing, completed
  type              String   @default("audio-only") // audio-only, screen-share, upload
  audioPath         String?  // Path to saved audio file
  transcript        String   @default("[]") // JSON array of transcript strings
  transcriptSegments String  @default("[]") // JSON array of TranscriptSegment objects
  duration          Int?     // Duration in seconds

  // Suggestions (JSON stored as text)
  topics            String   @default("[]") // JSON array
  decisions         String   @default("[]") // JSON array
  actions           String   @default("[]") // JSON array

  // Summary (JSON stored as text)
  summary           String?  // JSON object or null

  // Notes taken during the meeting
  notes             String?  // HTML notes

  // Owner relationship
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([userId])
}
